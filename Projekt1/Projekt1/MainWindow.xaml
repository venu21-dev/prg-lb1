<Window x:Class="Projekt1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kontaktverwaltung - Dark Mode" Height="826" Width="1200" 
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        ResizeMode="CanResize"
        WindowState="Normal">

    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="DarkBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="DarkCardBackground" Color="#2D2D30"/>
        <SolidColorBrush x:Key="DarkInput" Color="#3C3C3C"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#404040"/>
        <SolidColorBrush x:Key="DarkText" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DarkTextSecondary" Color="#E1DFDD"/>
        <SolidColorBrush x:Key="DarkTextTertiary" Color="#B3B3B3"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#0078D4"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#28A745"/>
        <SolidColorBrush x:Key="AccentRed" Color="#DC3545"/>
        <SolidColorBrush x:Key="ErrorRed" Color="#FF6B6B"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernDarkButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryDarkButton" TargetType="Button" BasedOn="{StaticResource ModernDarkButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerDarkButton" TargetType="Button" BasedOn="{StaticResource ModernDarkButton}">
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessDarkButton" TargetType="Button" BasedOn="{StaticResource ModernDarkButton}">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Dark Card Style -->
        <Style x:Key="DarkCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DarkCardBackground}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="16" ShadowDepth="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource DarkInput}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource DarkInput}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Dark Label Style -->
        <Style x:Key="DarkFieldLabel" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource DarkTextSecondary}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="120"/>
        </Style>

        <!-- Dark DataGrid Style -->
        <Style x:Key="DarkDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#252526"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#353535"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0078D420"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0078D440"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Linke Seite: Formular -->
        <Border Style="{StaticResource DarkCard}" Grid.Column="0">
            <StackPanel>
                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Rectangle Width="3" Height="24" Fill="{StaticResource AccentBlue}" Margin="0,0,12,0"/>
                    <TextBlock Text="Kontakt Details" 
                              FontSize="22" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource DarkText}" 
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Form Fields -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Anrede -->
                    <Label Content="Anrede *" Grid.Row="0" Grid.Column="0" Style="{StaticResource DarkFieldLabel}"/>
                    <ComboBox x:Name="cmbAnrede" Grid.Row="0" Grid.Column="1" Style="{StaticResource DarkComboBox}" Margin="0,0,0,4" SelectionChanged="cmbAnrede_SelectionChanged" Foreground="Black">
                        <ComboBoxItem Content="Bitte wählen..." OpacityMask="Black"/>
                        <ComboBoxItem Content="Herr"/>
                        <ComboBoxItem Content="Frau"/>
                        <ComboBoxItem Content="Divers"/>
                    </ComboBox>
                    <TextBlock x:Name="lblErrorAnrede" Grid.Row="1" Grid.Column="1" Foreground="{StaticResource ErrorRed}" FontSize="12" Margin="0,0,0,8"/>

                    <!-- Vorname -->
                    <Label Content="Vorname *" Grid.Row="2" Grid.Column="0" Style="{StaticResource DarkFieldLabel}"/>
                    <TextBox x:Name="txtVorname" Grid.Row="2" Grid.Column="1" Style="{StaticResource DarkTextBox}" Margin="0,0,0,4"/>
                    <TextBlock x:Name="lblErrorVorname" Grid.Row="3" Grid.Column="1" Foreground="{StaticResource ErrorRed}" FontSize="12" Margin="0,0,0,8"/>

                    <!-- Nachname -->
                    <Label Content="Nachname *" Grid.Row="4" Grid.Column="0" Style="{StaticResource DarkFieldLabel}"/>
                    <TextBox x:Name="txtNachname" Grid.Row="4" Grid.Column="1" Style="{StaticResource DarkTextBox}" Margin="0,0,0,4"/>
                    <TextBlock x:Name="lblErrorNachname" Grid.Row="5" Grid.Column="1" Foreground="{StaticResource ErrorRed}" FontSize="12" Margin="0,0,0,8"/>

                    <!-- E-Mail -->
                    <Label Content="E-Mail *" Grid.Row="6" Grid.Column="0" Style="{StaticResource DarkFieldLabel}"/>
                    <TextBox x:Name="txtMail" Grid.Row="6" Grid.Column="1" Style="{StaticResource DarkTextBox}" Margin="0,0,0,4"/>
                    <TextBlock x:Name="lblErrorMail" Grid.Row="7" Grid.Column="1" Foreground="{StaticResource ErrorRed}" FontSize="12" Margin="0,0,0,8"/>

                    <!-- Strasse -->
                    <Label Content="Strasse" Grid.Row="8" Grid.Column="0" Style="{StaticResource DarkFieldLabel}"/>
                    <TextBox x:Name="txtStrasse" Grid.Row="8" Grid.Column="1" Style="{StaticResource DarkTextBox}" Margin="0,0,0,8"/>

                    <!-- PLZ -->
                    <Label Content="PLZ *" Grid.Row="9" Grid.Column="0" Style="{StaticResource DarkFieldLabel}"/>
                    <TextBox x:Name="txtPLZ" Grid.Row="9" Grid.Column="1" Style="{StaticResource DarkTextBox}" Margin="0,0,0,4"/>
                    <TextBlock x:Name="lblErrorPLZ" Grid.Row="10" Grid.Column="1" Foreground="{StaticResource ErrorRed}" FontSize="12" Margin="0,0,0,8"/>

                    <!-- Ort -->
                    <Label Content="Ort" Grid.Row="11" Grid.Column="0" Style="{StaticResource DarkFieldLabel}"/>
                    <TextBox x:Name="txtOrt" Grid.Row="11" Grid.Column="1" Style="{StaticResource DarkTextBox}" Margin="0,0,0,8"/>

                    <!-- Land -->
                    <Label Content="Land" Grid.Row="12" Grid.Column="0" Style="{StaticResource DarkFieldLabel}"/>
                    <ComboBox x:Name="cmbLand" Grid.Row="12" Grid.Column="1" Style="{StaticResource DarkComboBox}" Margin="0,0,0,8" SelectedIndex="0" SelectionChanged="cmbLand_SelectionChanged" Foreground="Black">
                        <ComboBoxItem Content="Schweiz"/>
                        <ComboBoxItem Content="Deutschland"/>
                        <ComboBoxItem Content="Österreich"/>
                    </ComboBox>

                    <!-- Geburtsdatum -->
                    <Label Content="Geburtsdatum" Grid.Row="13" Grid.Column="0" Style="{StaticResource DarkFieldLabel}" OpacityMask="Black"/>
                    <DatePicker x:Name="dpGeburtsdatum" Grid.Row="13" Grid.Column="1" 
                               Background="{StaticResource DarkInput}" 
                               Foreground="Black"
                               BorderBrush="{StaticResource DarkBorder}"
                               FontSize="14" Margin="0,0,0,16"/>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0" Width="376">
                    <Button Content="💾 Speichern" Style="{StaticResource SuccessDarkButton}" Click="BtnSpeichern_Click" Height="37" Width="109"/>
                    <Button Content="🗑️ Löschen" Style="{StaticResource DangerDarkButton}" Click="BtnLoeschen_Click" Width="88"/>
                </StackPanel>

                <!-- Feedback -->
                <Border x:Name="feedbackBorder" Margin="0,16,0,0" CornerRadius="4" Padding="12" Visibility="Collapsed">
                    <TextBlock x:Name="lblFeedback" FontWeight="SemiBold" TextWrapping="Wrap" Foreground="{StaticResource DarkText}"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Rechte Seite: Daten -->
        <Border Style="{StaticResource DarkCard}" Grid.Column="1">
            <StackPanel>
                <!-- Header mit Suche -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="3" Height="24" Fill="{StaticResource AccentBlue}" Margin="0,0,12,0"/>
                        <TextBlock Text="Gespeicherte Kontakte" 
                                  FontSize="22" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource DarkText}" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <TextBox x:Name="txtSuche" 
                                Width="200" 
                                Style="{StaticResource DarkTextBox}" 
                                Margin="0,0,8,0"/>
                        <Button Content="🔍 Suchen" Style="{StaticResource ModernDarkButton}" Click="BtnSuchen_Click" Width="84"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid x:Name="dgKontakte" 
                         Style="{StaticResource DarkDataGrid}"
                         Height="350"
                         SelectionChanged="DgKontakte_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Anrede" Binding="{Binding Anrede}" Width="80"/>
                        <DataGridTextColumn Header="Vorname" Binding="{Binding Vorname}" Width="100"/>
                        <DataGridTextColumn Header="Nachname" Binding="{Binding Nachname}" Width="120"/>
                        <DataGridTextColumn Header="E-Mail" Binding="{Binding Email}" Width="*"/>
                        <DataGridTextColumn Header="Ort" Binding="{Binding Ort}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Statistiken -->
                <Border Background="#252526" 
                       CornerRadius="4" 
                       Padding="16" 
                       Margin="0,16,0,0"
                       BorderThickness="1"
                       BorderBrush="{StaticResource DarkBorder}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Rectangle Width="3" Height="18" Fill="{StaticResource AccentBlue}" Margin="0,0,8,0"/>
                            <TextBlock Text="Statistiken" FontWeight="Bold" FontSize="16" Foreground="{StaticResource DarkText}"/>
                        </StackPanel>
                        <TextBlock x:Name="lblStatistiken" FontSize="14" LineHeight="20" Foreground="{StaticResource DarkTextTertiary}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
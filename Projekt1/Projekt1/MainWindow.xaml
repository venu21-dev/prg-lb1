<Window x:Class="Projekt1.MainWindow"
        Title="MainWindow" Height="600" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Neu" Width="80" Margin="0,0,5,0" Click="BtnNeu_Click"/>
                <Button Content="Speichern" Width="80" Margin="0,0,5,0"/>
                <Button Content="Löschen" Width="80" Margin="0,0,5,0" Click="BtnLoeschen_Click"/>
                <Button Content="Suchen" Width="80" Click="BtnSuchen_Click"/>
            </StackPanel>

            <!-- Anrede -->
            <StackPanel Orientation="Horizontal">
                <Label Content="Anrede *" Width="100"/>
                <ComboBox x:Name="cmbAnrede" Width="200">
                    <ComboBoxItem Content="Herr"/>
                    <ComboBoxItem Content="Frau"/>
                    <ComboBoxItem Content="Divers"/>
                </ComboBox>
            </StackPanel>
            <TextBlock x:Name="lblErrorAnrede" Foreground="Red" FontSize="12"/>

            <!-- Vorname -->
            <StackPanel Orientation="Horizontal">
                <Label Content="Vorname *" Width="100"/>
                <TextBox x:Name="txtVorname" Width="200"/>
            </StackPanel>
            <TextBlock x:Name="lblErrorVorname" Foreground="Red" FontSize="12"/>

            <!-- Nachname -->
            <StackPanel Orientation="Horizontal">
                <Label Content="Nachname *" Width="100"/>
                <TextBox x:Name="txtNachname" Width="200"/>
            </StackPanel>
            <TextBlock x:Name="lblErrorNachname" Foreground="Red" FontSize="12"/>

            <!-- Mail -->
            <StackPanel Orientation="Horizontal">
                <Label Content="E-Mail *" Width="100"/>
                <TextBox x:Name="txtMail" Width="200"/>
            </StackPanel>
            <TextBlock x:Name="lblErrorMail" Foreground="Red" FontSize="12"/>

            <!-- Strasse -->
            <StackPanel Orientation="Horizontal">
                <Label Content="Strasse" Width="100"/>
                <TextBox x:Name="txtStrasse" Width="200"/>
            </StackPanel>

            <!-- PLZ -->
            <StackPanel Orientation="Horizontal">
                <Label Content="PLZ *" Width="100"/>
                <TextBox x:Name="txtPLZ" Width="200"/>
            </StackPanel>
            <TextBlock x:Name="lblErrorPLZ" Foreground="Red" FontSize="12"/>

            <!-- Ort -->
            <StackPanel Orientation="Horizontal">
                <Label Content="Ort" Width="100"/>
                <TextBox x:Name="txtOrt" Width="200"/>
            </StackPanel>

            <!-- Land -->
            <StackPanel Orientation="Horizontal">
                <Label Content="Land" Width="100"/>
                <ComboBox x:Name="cmbLand" Width="200">
                    <ComboBoxItem Content="Schweiz"/>
                    <ComboBoxItem Content="Deutschland"/>
                    <ComboBoxItem Content="Österreich"/>
                </ComboBox>
            </StackPanel>

            <!-- Geburtsdatum -->
            <StackPanel Orientation="Horizontal">
                <Label Content="Geburtsdatum" Width="100"/>
                <DatePicker x:Name="dpGeburtsdatum" Width="200"/>
            </StackPanel>

            <!-- Absenden -->
            <Button Content="Absenden" Background="LimeGreen" Height="40" Margin="0,20,0,0"
                    Click="BtnAbsenden_Click"/>

            <!-- Feedback Bereich -->
            <TextBlock x:Name="lblFeedback" FontSize="14" FontWeight="Bold" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
